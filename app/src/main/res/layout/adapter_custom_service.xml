<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:id="@+id/ada_custom_service"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        >
        <RelativeLayout
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="5dp"
            >

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/img_custom_service_icon"
                />

            <View
                android:layout_alignParentRight="true"
                android:id="@+id/ada_custom_service_is_new_message"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@mipmap/xiaoxin_tishi" />

        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/ada_custom_service_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="3dp"
                    android:text="客服小米"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/ada_custom_service_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="time"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginRight="6dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/ada_custom_service_last_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="3dp"
                    android:text="尊敬的客户，您有什么想要了解的"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="#999999"
        android:layout_marginLeft="10dp"
        />

</LinearLayout>