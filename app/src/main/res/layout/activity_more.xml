<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F9C432"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/backImage"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@mipmap/denglu_fanhui"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

        <TextView
            android:id="@+id/moreTitle"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="19sp"
            android:layout_centerInParent="true"
            android:text="项目信息"
            />
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/moreSwipeRefrsh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F4F4F4"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/projectIndustry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/industryTextView"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="match_parent"
                android:text="行业"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/deriction_selector" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/projectAeara"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/areaTextView"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="地区"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:src="@drawable/deriction_selector"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/projectTime"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="时间"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:src="@drawable/deriction_selector"/>
        </LinearLayout>

    </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/projectRecyler"
                android:layout_width="match_parent"
                android:layout_height="571dp" />
        </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>