<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="协助内容："
            android:textColor="#333333"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:background="@drawable/range_shape"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/writeBookInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:gravity="left|top"
                android:hint="请输入您在投标方面需要协助的内容"
                android:paddingLeft="10dp"
                android:textColor="#999999"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/writetenderbook_item_hight"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="13sp"
            android:paddingLeft="12dp"
            android:textColor="#333333"
            android:text="联系人："
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/range_shape"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/contactPersonInput"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="#999999"
                android:layout_weight="1"
                android:hint="请输入联系人姓名"
                android:layout_height="match_parent"
                android:background="@null"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/writetenderbook_item_hight"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="联系方式："
            android:textColor="#333333"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/range_shape"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/contactType"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginLeft="10dp"
                android:hint="请输入联系人方式"
                android:layout_height="match_parent"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/postTenderhelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="32dp"
        android:background="@mipmap/bg2"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="18dp"
        android:textSize="13sp"
        android:textColor="#FF0000"
        android:text="温馨提示："
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="18dp"
        android:textSize="13sp"
        android:textColor="#666666"
        android:text="@string/TenderDescrp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="18dp"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="链接地址："
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/text"
            android:layout_marginTop="18dp"
            android:text="http：//www.bibnet.com"
            android:layout_centerVertical="true"
            android:textColor="#3F2DC9"
            android:textSize="13sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="18dp"
            android:textSize="13sp"
            android:textColor="#666666"
            android:text="客服电话："
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@id/text1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="18dp"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:textColor="#3F2DC9"
            android:text="400-000-388"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>