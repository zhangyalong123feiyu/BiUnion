<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="12dp"
                android:background="@mipmap/bg"
                android:text="信息选择"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/projcetInfo"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:background="@drawable/select_private_persion_design_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="项目信息"
                        android:textColor="@drawable/select_private_persion_design_txt"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/tenderInfo"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:background="@drawable/select_private_persion_design_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="招标信息"
                        android:textColor="@drawable/select_private_persion_design_txt"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/buyInfo"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:background="@drawable/select_private_persion_design_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="采购信息"
                        android:textColor="@drawable/select_private_persion_design_txt"
                        android:textSize="13sp" />
                </LinearLayout>
            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@mipmap/bg"
                android:text="项目类别"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/project"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:src="@drawable/select_private_persion_design_project_img" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/goods"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:src="@drawable/select_private_persion_design_good_img" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:src="@drawable/select_private_persion_design_service_img" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:src="@mipmap/ic_launcher"
                        android:text="采购信息" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@mipmap/bg"
                android:text="所属地区"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/areaRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.42" />

            <Button
                android:id="@+id/postDesinInfo"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@mipmap/bg2"
                android:text="提交"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>