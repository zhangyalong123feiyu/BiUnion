<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#F9C432"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/title_imageleft"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:clickable="true"
            android:src="@mipmap/denglu_fanhui"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/login_logo" />

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/textView1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:gravity="center_vertical"
                android:src="@mipmap/login_user_name"
                 />


            <EditText
                android:id="@+id/inputPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView1"
                android:background="@null"
                android:textColor="#999999"
                android:textSize="13sp"
                android:ems="10"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="请输入本人手机号码"
                android:paddingLeft="20dp"
                android:layout_alignParentEnd="true">

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/textView2"
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:gravity="center_vertical"
                android:src="@mipmap/login_password"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/textView2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:textColor="#999999"
                android:textSize="13sp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:paddingLeft="20dp"
               >
                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/seePasswrod"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:gravity="center_vertical"
                android:src="@mipmap/seepassword"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@mipmap/bg2"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        android:text="登录"
        />
    <Button
        android:id="@+id/fastLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:text="手机号快捷登录"
        android:background="@mipmap/bg2"
        android:layout_below="@+id/btn_login"
         />



</RelativeLayout>