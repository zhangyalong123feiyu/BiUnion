<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/titlebar"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/writetenderbook_item_hight"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="13sp"
            android:paddingLeft="12dp"
            android:textColor="#333333"
            android:text="标题："
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/range_shape"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/userQuestion"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="#999999"
                android:layout_weight="1"
                android:hint="请输入要提问的问题"
                android:layout_height="match_parent"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="内容："
            android:textColor="#333333"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:background="@drawable/range_shape"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/questionContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:gravity="left|top"
                android:hint="请输入提问的内容"
                android:paddingLeft="10dp"
                android:textColor="#999999"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/writetenderbook_item_hight"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="邀请专家："
            android:textColor="#333333"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/isCallExperts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:background="@drawable/range_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/callTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="是"
                android:paddingLeft="10dp"
                android:textColor="#999999"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@mipmap/qianjin" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="("
            android:textColor="#d9d9d9"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="*"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/red"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="推荐您邀请专家，30分钟内就会有满意回答）"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="#d9d9d9"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstExperts"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/expertselect_selector"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:src="@mipmap/wodewenda_touxiang" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="资费" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="中国招标协会经理人协会会长" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:text="《招标采购案例分析》教材编委，招标师考试阅卷老师，招标在线辅导课特约讲师同时作为中国招标国际招标网特约专家，曾多次进行招标老师考试培训" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/select_expert_selection" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondExperts"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/expertselect_selector"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:src="@mipmap/wodewenda_touxiang2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="资费" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="中国招标协会经理人协会会长" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:text="先任中国远东国际招标公司客户资源部总经理，从事招投标工作数十年。\n擅长领域：国际蚂蚁、国际/国内招标、政府采购合同管理" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/select_expert_selection"
                android:layout_gravity="bottom|right"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/postData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="46dp"
        android:background="@mipmap/bg2"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
</LinearLayout>