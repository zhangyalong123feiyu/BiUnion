<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/writetenderbook_item_hight"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="标题："
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/writeBookInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="如何提高中标率？"
            android:paddingLeft="10dp"
            android:textColor="#999999"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="内容："
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="如何提高中标率？如何提高中标率？如何提高中标率？如何提高中标率？如何提高中标率？如何提高中标率？如何提高中标率？如何提高中标率？如何提高中标率？如何提高中标率？如何提高中标率？如何提高中标率？如何提高中标率？"
            android:paddingLeft="10dp"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/createTime"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="dsaf"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/isAnsewerEnd"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="已完结"
            android:textColor="#333333"
            android:textSize="13sp" />

    </RelativeLayout>
</LinearLayout>