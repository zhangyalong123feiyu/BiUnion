<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/linearbottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/lightgray"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/bottomhome"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/home"
                android:layout_width="30dp"
                android:src="@drawable/bottomhome_selector"
                android:layout_height="30dp"
                />
            <TextView
                android:id="@+id/texthome"
                android:layout_width="wrap_content"
                android:layout_below="@id/home"
                android:layout_marginTop="2dp"
                android:textColor="@drawable/bottomtext_selector"
                android:layout_height="wrap_content"
                android:text="@string/bottom_home"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottomFoucs"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/Foucs"
                android:layout_width="30dp"
                android:src="@drawable/bottommy_selector"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/Foucs"
                android:layout_marginTop="2dp"
                android:textColor="@drawable/bottomtext_selector"
                android:layout_height="wrap_content"
                android:text="@string/bottom_ask"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottomask"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/my"
                android:layout_width="30dp"
                android:src="@drawable/bottommy_selector"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/my"
                android:layout_marginTop="2dp"
                android:textColor="@drawable/bottomtext_selector"
                android:layout_height="wrap_content"
                android:text="@string/bottom_ask"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottomy"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/more"
                android:layout_width="30dp"
                android:src="@drawable/bottommore_selector"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/more"
                android:layout_marginTop="2dp"
                android:textColor="@drawable/bottomtext_selector"
                android:layout_height="wrap_content"
                android:text="@string/bottom_my"/>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/fragementcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearbottom">
    </RelativeLayout>
</RelativeLayout>
