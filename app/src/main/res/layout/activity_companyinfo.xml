<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#F4F4F4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="注：完善资料后可获得更多服务" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="*号为必填"
                    android:textColor="@color/red" />
            </LinearLayout>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="15dp"
                android:src="@mipmap/qiye_jibenxinxi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/companyinfo_item_hight"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="12dp"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业名称:"
                        android:textColor="@color/red" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inputCompanyName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:textSize="13sp"
                    android:textColorHint="#999999"
                    android:hint="请输入公司名" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D6D7DC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/companyinfo_item_hight"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="12dp"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="统一信用代码:"
                        android:textColor="@color/red" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inputCreditCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:textSize="13sp"
                    android:textColorHint="#999999"
                    android:hint="请输入统一信用代码" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D6D7DC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/companyinfo_item_hight"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:text="*"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法定代表:"
                        android:textColor="@color/red" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inputLegalName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:textSize="13sp"
                    android:textColorHint="#999999"
                    android:hint="请输入法人姓名" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D6D7DC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/companyinfo_item_hight"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:text="*"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法人身份证号:"
                        android:textColor="@color/red" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inputLegalIdentityCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="13sp"
                    android:textColorHint="#999999"
                    android:background="@null"
                    android:hint="请输入法人身份证" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D6D7DC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/companyinfo_item_hight"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:text="*"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所属行业:"
                        android:textColor="@color/red" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inputIndustry"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:textSize="13sp"
                    android:textColorHint="#999999"
                    android:hint="请输入行业" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D6D7DC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/companyinfo_item_hight"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:text="*"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所在地区:"
                        android:textColor="@color/red" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inputArea"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="13sp"
                    android:textColorHint="#999999"
                    android:background="@null"
                    android:hint="请输入地区" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D6D7DC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/companyinfo_item_hight"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:text="*"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详细地址:"
                        android:textColor="@color/red" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inputDetailAddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:textSize="13sp"
                    android:textColorHint="#999999"
                    android:hint="请输入详细地址" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D7DC" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="15dp"
                android:src="@mipmap/qiye_lianxirenxinxi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/companyinfo_item_hight"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:text="*"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业名称:"
                        android:textColor="@color/red" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inputContactPerson"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:textSize="13sp"
                    android:textColorHint="#999999"
                    android:hint="请输入联系人" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D6D7DC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/companyinfo_item_hight"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:text="*"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业名称:"
                        android:textColor="@color/red" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inputPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:textSize="13sp"
                    android:textColorHint="#999999"
                    android:hint="请输入手机号" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D7DC" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="15dp"
                android:src="@mipmap/qiye_qiyezhuanjian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:gravity="top">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业名称:"
                        android:textColor="@color/red" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="72dp"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/businessImage"
                        android:layout_width="133dp"
                        android:layout_height="74dp"
                        android:background="@mipmap/qiyeziliao_shangchuan" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/saveTenderBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="32dp"
                android:background="@mipmap/bg2"
                android:text="保存"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>