<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color" >

    <RelativeLayout
        android:id="@+id/shop_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg_color" >

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_record"
            android:visibility="gone" />

        <ImageView
            android:layout_width="96.8dp"
            android:layout_height="16.8dp"
            android:layout_centerInParent="true"
            android:background="@drawable/hd_logo" />

        <RelativeLayout
            android:id="@+id/textview_customer"
            android:layout_width="@dimen/title_icon_btn_layout_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/hd_common_tab_bg"
            android:clickable="true">
            <ImageView
                android:layout_width="@dimen/title_customer_icon_size"
                android:layout_height="@dimen/title_customer_icon_size"
                android:layout_centerInParent="true"
                android:background="@drawable/hd_chat_icon"/>
        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
