<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_pre_sales"
        android:layout_width="@dimen/pop_list_width"
        android:layout_height="@dimen/pop_list_height"
        android:background="@color/main_text_color"
        android:text="@string/pop_pre_sales"
        android:textSize="@dimen/pop_menu_text_size"
        android:textColor="@color/bottom_customer_text_color" />

    <Button
        android:id="@+id/btn_after_sales"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@color/normal_bg_color"
        android:textSize="@dimen/pop_menu_text_size"
        android:text="@string/pop_after_sales"
        android:textColor="@color/bottom_customer_text_color" />

</LinearLayout>